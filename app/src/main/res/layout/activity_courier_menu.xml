<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourierMenuActivity">

    <Button
        android:id="@+id/btnDelivered"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="2dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:text="Pristatyti uzsakymai"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnNotDelivered"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnNotDelivered"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="2dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:text="Nepristatyti uzsakymai"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnEmpty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnEmpty"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="2dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:text="Vairuotojas"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnOut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnOut"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="2dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:text="Atsijungti"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="510dp"
        android:layout_height="690dp"
        android:layout_marginBottom="160dp"
        app:layout_constraintBottom_toTopOf="@+id/btnOut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/delivery2" />

</androidx.constraintlayout.widget.ConstraintLayout>